@model IEnumerable<AdminPanelV1.Models.ProductSliders>

@{
    ViewBag.Title = "Slider Resimleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
    });</script>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Ürün Kayıtları</h5>
        <a class="btn btn-outline-secondary" href="/ProductSliders/Create">Resim Ekle</a>

        <!-- Table with stripped rows -->
        <table class="table table-striped" id="myTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Slider Resim</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.ProductId</th>
                        <td>@item.Products.Title</td>
                        <td><img src="@item.ImgUrl" width="100" height="100" /></td>
                        <td>
                            <a href="/ProductSliders/Edit/@item.SliderId">Düzenle</a> |
                            <a href="/ProductSliders/Delete/@item.SliderId">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- End Table with stripped rows -->

    </div>
</div>