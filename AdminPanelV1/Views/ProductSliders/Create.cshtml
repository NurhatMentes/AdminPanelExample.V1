@model AdminPanelV1.Models.ProductSliders

@{
    ViewBag.Title = "Ürün Slider Resmi Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("Create", "ProductSliders", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <div class="form-horizontal">
                <h4 class="card-title">Ürün Slider Resmi Oluştur</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" style="margin-top:1%">
                    @Html.LabelFor(model => model.ProductId, "ProductId", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ProductId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:1%">
                    @Html.LabelFor(model => model.ImgUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" class="form-control" id="imgUrl" name="imgUrl" accept=".jpg,.png,.jpeg">
                        @Html.ValidationMessageFor(model => model.ImgUrl, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:1%">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary"> Ekle </button>
                        <button type="reset" class="btn btn-secondary"><a href="/Products/Index" style="color: white">Geri Dön</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
