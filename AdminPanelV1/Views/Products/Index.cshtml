@model IEnumerable<AdminPanelV1.Models.Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
    });
</script>

<div class="card">
    <div class="card-body">
        <h5 class="card-title" style="float: left">Ürün Kayıtları</h5>
        <a class="btn btn-outline-success" href="/Products/Create" style="margin-left: 5%; margin-top: 1%">Yeni Ekle</a>

        <!-- Table with stripped rows -->
        <table class="table table-hover" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OldPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Color)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.File)
                    </th>
                    <th scope="col">Etiketler</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImgUrl)
                    </th>
                    <th>
                        Admin
                    </th>
                    <th>
                        Güncelleyen Admin
                    </th>
                    <th>
                        Güncelleme Tarihi
                    </th>
                    <th>
                        Kategori
                    </th>
                    <th>
                        Alt Kategori
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OldPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @{
                                if (item.File != null)
                                {
                                    <p>@Html.Raw(item.File.Substring(17))</p>
                                }
                                else
                                {
                                    <p>Yok</p>
                                }
                            }
                        </td>
                        <td>@Html.Raw(item.Tag)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            <img src="@item.ImgUrl" width="100" height="100" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Users.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Users.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdateDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categories.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubCategories.SubCategoryName)
                        </td>
                        <td>
                            <a href="/ProductSliders/Index/@item.ProductId">Slider Resim</a> |
                            <a href="/Products/Edit/@item.ProductId">Düzenle</a> |
                            <a href="/Products/Details/@item.ProductId">Detay</a> |
                            <a href="/Products/Delete/@item.ProductId">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>