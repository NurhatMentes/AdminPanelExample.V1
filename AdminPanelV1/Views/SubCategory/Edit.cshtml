@model AdminPanelV1.Models.SubCategory

@{
    ViewBag.Title = "Alt Kategori Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("Edit", "SubCategory", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Kategori Düzenle</h5>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.SubCategoryId)

            <div class="form-group" style="margin-top:1%">
                @Html.LabelFor(model => model.CategoryId, "Ana Kategori", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-top:1%">
                @Html.LabelFor(model => model.SubCategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SubCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SubCategoryName, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="col-12" style="margin-top:1%">
                <label for="inputPassword4" class="form-label">Resim - Img</label>
                <input type="file" class="form-control" id="ImgUrl" name="ImgUrl" accept=".jpg,.png,.jpeg">
            </div>
            @Html.ValidationMessageFor(model => model.ImgUrl, "", new { @class = "text-danger" })
            <div class="form-group" style="margin-top:1%">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Güncelle" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>