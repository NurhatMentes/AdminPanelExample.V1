@model AdminPanelV1.Models.SubCategories

@{
    ViewBag.Title = "Alt Kategori";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Silmek istediğinize emin misiniz?</h3>
<div class="card alert-danger">
    <div class="card-body">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.SubCategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SubCategoryName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </dt>

            <dd>
                <img src="@Model.ImgUrl" width="300" height="200" />
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div style="color:red">
                @ViewBag.Danger
            </div>

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-danger" /> |
                @Html.ActionLink("Geri Dön", "Index")
            </div>
        }
    </div>
</div>