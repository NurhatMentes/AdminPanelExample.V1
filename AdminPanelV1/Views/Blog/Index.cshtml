@model IEnumerable<AdminPanelV1.Models.Blog>
@{
    ViewBag.Title = "Blog Kayıtları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
    });
</script>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Blog Kayıtları</h5>
        <a class="btn btn-outline-secondary" href="/Blog/Create/">Yeni Blog Ekle</a>

        <!-- Table with stripped rows -->
        <table class="table table-striped" id="myTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Kategori</th>
                    <th scope="col">Alt Kategori</th>
                    <th scope="col">Resim</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.BlogId</th>
                        <td>@item.Title</td>
                        <td>@item.Category.CategoryName</td>

                        <td>@item.SubCategory.SubCategoryName</td>

                        <td><img src="@item.ImgUrl" width="100" height="100" /></td>
                        <td>
                            <a href="/Blog/Edit/@item.BlogId">Düzenle</a> |
                            <a href="/Blog/Delete/@item.BlogId">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- End Table with stripped rows -->

    </div>
</div>