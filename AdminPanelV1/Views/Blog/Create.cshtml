@model IEnumerable<AdminPanelV1.Models.Blog>

@{
    ViewBag.Title = "Blog Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<<script type="text/javascript">
     CKEDITOR.replace('editor')
 </script>


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Blog Oluştur</h5>

        @*<form class="row g-3" method="post" enctype="multipart/form-data" action="/Blog/Create/">*@
        @using (Html.BeginForm("Create", "Blog", FormMethod.Post, new {enctype = "multipart/form-data"}))
        {
            @Html.AntiForgeryToken()
            <div class="col-12">
                <label for="inputNanme4" class="form-label">Başlık*</label>
                <input type="text" class="form-control" name="Title" id="Title" required="">
            </div>
            <div class="col-12">
                @{
                    Html.RenderAction("CategoriesPartial", "Blog");
                }

            </div>
            <div class="col-12">
                <label for="inputNanme4" class="form-label">İçerik*</label>
                <textarea name="Content" id="Content" class="ckeditor" required=""></textarea>
            </div>
            <div class="col-12">
                <label for="inputPassword4" class="form-label">Resim</label>
                <input type="file" class="form-control" id="ImgUrl" name="ImgUrl" accept=".jpg,.png,.jpeg">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Ekle</button>
                <button type="reset" class="btn btn-secondary"><a href="/Blog/Index" style="color: white">İptal</a></button>
            </div>
        }
        @*</form>*@<!-- Vertical Form -->
    </div>
</div>