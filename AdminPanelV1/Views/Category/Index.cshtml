@model IEnumerable<AdminPanelV1.Models.Categories>

@{
    ViewBag.Title = "Kategori";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
    });
</script>


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Kategoriler</h5>
        <button class="btn btn-dark" style="float: left; " value="">
            <a href="/Category/Create/" style="color: white">Yeni Ekle</a>
        </button>

        <table class="table table-hover" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImgUrl)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <img src="@item.ImgUrl" width="300" height="200" />
                    </td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.CategoryId }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.CategoryId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>