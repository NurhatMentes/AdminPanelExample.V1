@model IEnumerable<AdminPanelV1.Models.Service>
@{
    ViewBag.Title = "Hizmetler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-body">
        <h5 class="card-title" style="float: left">Hizmetler</h5>
        <a class="btn btn-outline-success" href="/Service/Create" style="margin-left: 5%; margin-top: 1%">Yeni Ekle</a>

        <!-- Default Table -->
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Başlık</th>
                <th scope="col">Etiketler</th>
                <th scope="col">Resim</th>
                <th scope="col">İşlemler</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ServiceId</th>
                    <td>@item.Title</td>
                    <td>@Html.Raw(item.Tag)</td>
                    <td><img src="@item.ImgUrl" width="300" height="200" /></td>
                    <td><a href="/Service/Edit/@item.ServiceId">Düzenle</a> | <a href="/Service/Delete/@item.ServiceId">Sil</a></td>
                </tr>
            }
            </tbody>
        </table>
        <!-- End Default Table Example -->
    </div>
</div>