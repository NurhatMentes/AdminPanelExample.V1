@model AdminPanelV1.Models.Services

@{
    ViewBag.Title = "Hizmetler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>



<div class="card">
    <div class="card-body">
        <h2 class="card-title">Hizmet Ekle</h2>
        <form class="row g-3" method="post" action="/Service/Create" enctype="multipart/form-data">
            <div class="col-12">
                <label for="inputNanme4" class="form-label">Başlık*</label>
                <input type="text" class="form-control" name="Title" id="Title" required="">
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
   
            <div class="col-12">
                <label for="inputEmail4" class="form-label">Açıklama*</label>
                <textarea name="Description" id="Description" class="ckeditor" required=""></textarea>
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
            <div class="col-12">
                <label for="inputEmail4" class="form-label">Etiketler*</label>
                <h6 for="inputEmail4" class="form-label" style="color:red">Etiketler arasına "," koyarak yazınız*</h6>
                <textarea name="Tag" id="Tag" required="" style="width:100%"></textarea>
                @Html.ValidationMessageFor(model => model.Tag, "", new { @class = "text-danger" })
            </div>
            <div class="col-12">
                <label for="inputNanme3" class="form-label">Resim</label>
                <input type="file" class="form-control" id="ImgUrl" name="ImgUrl" accept=".jpg,.png,.jpeg">
                <h6 style="color: red">@ViewBag.Warning</h6>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <button type="reset" class="btn btn-secondary"><a href="/Service/Index" style="color: white">İptal</a></button>
            </div>
        </form><!-- Vertical Form -->
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>