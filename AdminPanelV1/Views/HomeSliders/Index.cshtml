@model IEnumerable<AdminPanelV1.Models.Sliders>

@{
    ViewBag.Title = "Ana Sayfa Slider Resimleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Ürün Kayıtları</h5>
        <a class="btn btn-outline-secondary" href="/HomeSliders/Create">Resim Ekle</a>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImgUrl)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    <td><img src="@item.ImgUrl" width="100" height="100" /></td>

                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.SliderId }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.SliderId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
